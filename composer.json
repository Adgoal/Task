{
    "name": "adgoal-common/task",
    "type": "library",
    "description": "Adgoal Task common library",
    "license": "proprietary",
    "require": {
        "php": "^7.3",
        "adgoal-common/base": "4.0",
        "adgoal-common/command-bus": "^4.0",
        "beberlei/assert": "^3.2",
        "broadway/broadway": "^2.2",
        "queue-interop/amqp-interop": "^0.8",
        "queue-interop/queue-interop": "^0.7|^0.8",
        "enqueue/enqueue": "^0.10",
        "enqueue/fs": "^0.10",
        "enqueue/job-queue": "^0.10",
        "psr/log": "^1.1"
    },
    "require-dev": {
        "jakub-onderka/php-console-highlighter": "^0.4",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "mockery/mockery": "^1.2",
        "phan/phan": "4.0.*",
        "php-coveralls/php-coveralls": "^2.4",
        "phpmd/phpmd": "^2.6",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-mockery": "^0.12",
        "phpstan/phpstan-phpunit": "^0.12",
        "phpunit/phpunit": "^8.0",
        "roave/security-advisories": "dev-master",
        "sensiolabs-de/deptrac-shim": "^0.12.0",
        "symplify/easy-coding-standard": "8.3.*",
        "vimeo/psalm": "^4.7"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "AdgoalCommon\\Task\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AdgoalCommon\\Task\\Tests\\Unit\\": "tests/unit"
        }
    }
}
